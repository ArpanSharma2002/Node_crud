<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD Operations</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <div class="container">
    <h2>Employee List</h2>
    <a href="/employee/create">Add New User</a> <br>
    <%- include('search', { search: search }) %>
    <table>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
      <% employee.forEach(emp => { %>
        <tr>
          <td><%= emp.id %></td>
          <td><%= emp.name %></td>
          <td><%= emp.email %></td>
          <td>
            <a href="/employee/edit/<%= emp.id %>" class="edit-btn">Edit</a>
            <a href="/employee/delete/<%= emp.id %>" onclick="return confirm('Are you sure you want to delete?')" class="delete-btn" >Delete</a>
          </td>
        </tr>
      <% }) %>
    </table>
  </div>

</body>
</html>
